<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style>
    <Style.Resources>
      <Color x:Key="PrimaryColor">#1976d2</Color>
      <Color x:Key="SuccessColor">#43a047</Color>
      <Color x:Key="DangerColor">#d32f2f</Color>
      <Color x:Key="LightBackgroundColor">#fafbfc</Color>
      <Color x:Key="DarkBackgroundColor">#2d2d2d</Color>
      <Color x:Key="LightCardColor">#ffffff</Color>
      <Color x:Key="DarkCardColor">#353535</Color>

      <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
      <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
      <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
    </Style.Resources>
  </Style>

  <Style Selector="Border.Card">
  <Setter Property="Padding" Value="16"/>
  <Setter Property="Margin" Value="8"/>
  <Setter Property="CornerRadius" Value="8"/>
  </Style>
  
  <Style Selector="Window.Light">
      <Setter Property="Background" Value="{StaticResource LightBackgroundColor}"/>
  </Style>
  <Style Selector="Window.Dark">
      <Setter Property="Background" Value="{StaticResource DarkBackgroundColor}"/>
  </Style>

  <Style Selector="Border.Card.Light">
      <Setter Property="Background" Value="{StaticResource LightCardColor}"/>
  </Style>
  <Style Selector="Border.Card.Dark">
      <Setter Property="Background" Value="{StaticResource DarkCardColor}"/>
  </Style>
  
</Styles>