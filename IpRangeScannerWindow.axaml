<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="IPGeoLocator.IpRangeScannerWindow"
        Title="IP Range Scanner"
        Width="800"
        Height="600">
  <Grid RowDefinitions="Auto,*,Auto,Auto">
    <!-- Input Section -->
    <StackPanel Grid.Row="0" Margin="10" Orientation="Vertical">
      <TextBlock Text="IP Range Scanner" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
      
      <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
        <TextBlock Text="IP Range:" VerticalAlignment="Center" Width="80"/>
        <TextBox Name="IpRangeTextBox" Text="192.168.1.1-100" Width="200" Margin="5,0"/>
        <TextBlock Text="(e.g., 192.168.1.1-100)" FontStyle="Italic" VerticalAlignment="Center" Margin="5,0"/>
      </StackPanel>
      
      <CheckBox Name="IncludeThreatInfoCheckBox" Content="Include threat intelligence (requires API key)" 
                Margin="0,0,0,10" IsChecked="True"/>
      
      <StackPanel Orientation="Horizontal">
        <Button Name="ImportFileButton" Content="Import List" Margin="0,0,10,0"/>
        <Button Name="StartScanButton" Content="Start Scan" Margin="0,0,10,0"/>
        <Button Name="StopScanButton" Content="Stop Scan" Margin="0,0,10,0"/>
        <Button Name="ExportResultsButton" Content="Export Results" Margin="0,0,10,0"/>
        <Button Name="CancelButton" Content="Close" HorizontalAlignment="Right"/>
      </StackPanel>
    </StackPanel>
    
    <!-- Progress Section -->
    <StackPanel Grid.Row="2" Margin="10,0" Orientation="Vertical">
      <ProgressBar Name="ScanProgressBar" Height="20" Minimum="0" Maximum="100" 
                   Value="0" Margin="0,0,0,5"/>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <TextBlock Name="ProgressTextBlock" Text="Ready to scan IP range" 
                   VerticalAlignment="Center" Margin="0,0,10,0"/>
      </StackPanel>
    </StackPanel>
    
    <!-- Results Section -->
    <DataGrid Grid.Row="1" 
              Name="ResultsDataGrid"
              Margin="10,0,10,10"
              AutoGenerateColumns="False"

              HeadersVisibility="Column">
      <DataGrid.Columns>
        <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="120"/>
        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
        <DataGridTextColumn Header="Country" Binding="{Binding Country}" Width="100"/>
        <DataGridTextColumn Header="City" Binding="{Binding City}" Width="100"/>
        <DataGridTextColumn Header="ISP" Binding="{Binding Isp}" Width="120"/>
        <DataGridTextColumn Header="Threat Score" Binding="{Binding ThreatScore}" Width="80"/>
        <DataGridTextColumn Header="Scan Time" Binding="{Binding ScanTime, StringFormat='yyyy-MM-dd HH:mm:ss'}" Width="120"/>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</Window>